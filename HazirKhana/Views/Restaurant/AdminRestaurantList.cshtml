
@{
    ViewData["Title"] = "AdminRestaurantList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    List<RestaurantModel> restaurants = (List<RestaurantModel>)ViewData["Restaurants"];
}



<!--***********************Cards Section******************************************-->

<partial name="~/views/Partials/_adminAnalytics.cshtml" />


<div class="container restaurantTable bg-white">
    <div class="row">

        <div class=" p-5">
            <h2 class=" fw-bold">Restaurants</h2> <hr class="mt-5">
            <div class="d-flex mt-5">
                <input type="text" class="form-control w-25 p-2 " placeholder="Search by Name" name="" id=""> <button class="myBtn btn-lg btn-block mx-5"> Search</button>
            </div>
        </div>
    </div>
    <div class="row">

        @if (restaurants != null)
        {

            @foreach (var restaurant in restaurants)
            {
                <div class="col-md-4">
                    <div class="card restaurantListCard">
                        @if (restaurant.Banner != null)
                        {

                            <img src="data:image/jpg;base64,@restaurant.Banner" class="card-img-top" style="height: 200px;">
                        }

                        @if (restaurant.Logo != null)
                        {
                            <img src="data:image/jpg;base64,@restaurant.Logo" style="width: 100px; height: 100px; margin-top:-60px; border-radius: 50%; margin-left: 25px;">
                        }

                        <div class="card-body">
                            <p class="card-title fw-bold">@restaurant.Name</p>
                            @if (restaurant.ContactMob != 0)
                            {

                                <p class="card-text fw-bold"><i class="fas fa-phone-alt mx-1"></i> @restaurant.ContactMob</p>
                            }

                            @if (restaurant.ConatctTel != 0)
                            {

                                <p class="card-text fw-bold"><i class="fas fa-phone-alt mx-1"></i> @restaurant.ConatctTel</p>
                            }

                            <a asp-action="AdminSingleRestaurant" asp-controller="Restaurant" asp-route-id="@restaurant.Id" class="restaurantDetailBtn">View Details</a>
                        </div>
                    </div><br>

                </div>
            }





        }
        else
        {
            <h6>No Restaurants Found</h6>
        }
    </div>


    <div class="d-flex mt-5 mx-4 justify-content-end">
        <p class="mx-4 btn fw-bold">Previous</p>
        <p class="mx-4 btn fw-bold">Next</p>
    </div>
</div>




<br>
