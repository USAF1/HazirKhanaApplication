                                    {
                                        <div class="form-check form-check-inline mx-3 ">
                                            <input class="form-check-input " id="@cuisines[i].Id" type="checkbox" checked asp-for="@cuisines[i].IsChecked">
                                            <input type="hidden" asp-for="@cuisines[i].Id" />
                                            <input type="hidden" asp-for="@cuisines[i].Name" />
                                            <label class="form-check-label" for="Italian">@cuisines[i].Name</label>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="form-check form-check-inline mx-3 ">
                                            <input class="form-check-input " id="@cuisines[i].Id" type="checkbox" asp-for="@cuisines[i].IsChecked">
                                            <input type="hidden" asp-for="@cuisines[i].Id" />
                                            <input type="hidden" asp-for="@cuisines[i].Name" />
                                            <label class="form-check-label" for="Italian">@cuisines[i].Name</label>
                                        </div>
                                    }
                                }
                            </div>
                            <div class="col-md-6 mt-4">
                                <label for="name">Sales Tax *</label>
                                <input type="number" asp-for="SalesTax" value="@restaurant.SalesTax" class="form-control mt-2 w-75 p-2" required style="background-color: #FCFBFB;" placeholder=" Enter Sales Tax"><br>
                            </div>
                            <div class="col-md-6 mt-4">
                                <label for="name">Order Load Time  *</label>
                                <input type="number" asp-for="OrderLedTime" value="@restaurant.OrderLedTime" class="form-control w-75 mt-2 p-2" required style="background-color: #FCFBFB;" placeholder=" Enter  Order Load Time in Minutes"><br>

                            </div>

                        </div>
                        <div class="row mt-4">
                            <div class="col-md-6 ">
                                <label>Reservation *</label>
                                @foreach (var option in op)
                                {
                                    if (restaurant.Reservation == option)
                                    {
                                        <div class="form-check mx-3">
                                            <input class="form-check-input" type="radio" asp-for="Reservation" value="@option" checked name="Reservation">
                                            <label class="form-check-label" for="Reservation">
                                                @option
                                            </label>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="form-check mx-3">
                                            <input class="form-check-input" type="radio" asp-for="Reservation" value="@option" name="Reservation">
                                            <label class="form-check-label" for="Reservation">
                                                @option
                                            </label>
                                        </div>
                                    }

                                }
                            </div>
                            <div class="col-md-6">
                                <label for="name">Percentage Cut Off  *</label>
                                <input type="number" asp-for="PercentageCutOff" value="@restaurant.PercentageCutOff" class="form-control w-75 mt-2 p-2" required style="background-color: #FCFBFB;" placeholder=" Percentage Cut Off"><br>
                            </div>

                        </div>
                        <hr class="mt-4">
                        <div class="row mt-5">
                            <div class="col-md-6">
                                <label for="logo">Logo *</label>
                                <input type="file" asp-for="Logo" accept="image/*" name="logo" class="form-control mt-2 w-75 p-2" style="background-color: #FCFBFB;" placeholder=" Upload Logo "><br>

                            </div>
                            <div class="col-md-6">
                                <label for="name">Banner *</label>
                                <input type="file" asp-for="Banner" accept="image/*" name="banner" class="form-control w-75 mt-2 p-2" style="background-color: #FCFBFB;" placeholder="Upload Banner"><br>

                            </div>

                        </div>

                        <button type="submit" class="myBtn mt-2">Update Restaurant</button>
                        <br><br>

                    </form>
                </div>


            </div>
        </div>
    </div>
</div>
</div>
