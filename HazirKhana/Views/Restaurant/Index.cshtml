@model HazirKhana.Extras.PaginatedList<RestaurantModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_ClientLayout.cshtml";

    List<RestaurantModel> restaruarnt = (List<RestaurantModel>)ViewData["Restaurants"];
    List<CuisineModel> cuisines = (List<CuisineModel>)ViewData["Cuisines"];

}


<partial name="~/views/Partials/_ClientHeaderPartial.cshtml" model="@cuisines" />
<div class="container">
    <div class="section-header mt-4 text-center">
        <h1>Top Restaurant </h1>
        <span class="line"></span>
    </div>
    <partial name="~/views/Partials/_RestaurantListPartial.cshtml" model="@Model" />

    @{
        var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
        var nextDisabled = !Model.HasNextPage ? "disabled" : "";
    }
    <a asp-action="Index"
       asp-route-sortOrder="@ViewData["CurrentSort"]"
       asp-route-pageNumber="@(Model.PageIndex - 1)"
       asp-route-currentFilter="@ViewData["CurrentFilter"]"
       class="btn btn-default @prevDisabled">
        Previous
    </a>
    <a asp-action="Index"
       asp-route-sortOrder="@ViewData["CurrentSort"]"
       asp-route-pageNumber="@(Model.PageIndex + 1)"
       asp-route-currentFilter="@ViewData["CurrentFilter"]"
       class="btn btn-default @nextDisabled">
        Next
    </a>
</div>

