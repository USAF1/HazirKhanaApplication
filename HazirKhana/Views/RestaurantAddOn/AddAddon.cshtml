@model AddOnModel 
@{
    ViewData["Title"] = "AddAddon";
    Layout = "~/Views/Shared/_RestaurantAdminLayout.cshtml";
}


<div class="container bg-white m-5">
    <div class="row">
        <form asp-action="AddAddOn" asp-controller="RestaurantAddOn">
            <h1 class="mt-4 p-3">Add AddOn</h1>
            <p class="mx-3">Please Fill The Required Form </p> <hr>
            <div class="row mt-4">
                <div class="col-md-6">
                    <label for="name">Name *</label>
                    <input type="text" asp-for="Name" class="form-control mt-2 w-75 p-2" required style="background-color: #FCFBFB;" placeholder=" Enter Cuisine Name"><br>
                </div>
            </div><hr class="bg-dark mt-4">
            <br><br>
            <div class="row mt-4">
                <div class="col-md-6">
                    <label for="name">Price *</label>
                    <input type="number" asp-for="Price" class="form-control mt-2 w-75 p-2" required style="background-color: #FCFBFB;" placeholder=" Enter Cuisine Name"><br>
                </div>
            </div><hr class="bg-dark mt-4">
            <br><br>
            <hr class="mt-4">
            <button type="submit" class="myBtn mt-2">Add AddOn</button>
            <br><br>

        </form>
    </div>
</div>

