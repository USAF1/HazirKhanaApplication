@model ReservationModel

<h1 class="p-2 mx-5 mt-5">Reservation Form</h1>
<div class="container">
    <div class="row">
        <div class="col-md-9 bg-white" style=" box-shadow: 0 2px 4px 0 rgba(0, 0, 0, 0.2), 0 3px 10px 0 rgba(0, 0, 0, 0.19); background-color: #f2f2f2; border-radius: 10px;">
            <form action="" class="pb-5">
                <div class="row mx-3 mt-4">
                    <div class="col-md-6">
                        <label for="name">Name *</label>
                        <input type="text" asp-for="Name" class="form-control mt-2 w-75 p-2" required style="background-color: #FCFBFB;" placeholder=" Enter  Name"><br>
                        <label for="Table">Table For  *</label>
                        <input type="number" asp-for="TableFor" class="form-control mt-2 w-75 p-2" required style="background-color: #FCFBFB;" placeholder=" Enter  Table for">
                    </div>
                    <div class="col-md-6">
                        <label for="Contact">Contact *</label>
                        <input type="number" asp-for="Contact" class="form-control w-75 mt-2 p-2" required style="background-color: #FCFBFB;" placeholder="enter your contact number "><br>
                        <label for="email">Time  *</label>
                        <input type="time" asp-for="Time" class="form-control mt-2 w-75 p-2" required style="background-color: #FCFBFB;" placeholder=" Enter Time ">
                    </div>
                </div>
                <div class="d-flex mx-5 mt-5 justify-content-end "> <button class="viewRestaurantBtn">Reserve</button> </div>
            </form>

        </div>
    </div>
</div>




